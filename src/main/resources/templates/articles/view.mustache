<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">TITLE</th>
      <th scope="col">CONTENT</th>
    </tr>
  </thead>
  <tbody>
  {{! 주석 }}
  {{! #article }}
    <tr>
      <th scope="row">{{ article.id }}</th>
      <td>{{ article.title }}</td>
      <td>{{ article.content }}</td>
    </tr>
  {{! /article }}
  </tbody>
</table>

<a href="/articles/List" class="btn btn-primary">목록</a>
<a href="/articles/WriteForm" class="btn btn-secondary">새 글 쓰기</a>
<a href="/articles/{{ id }}/EditForm" class="btn btn-success">수정</a>
<a href="/articles/{{ id }}/Delete" class="btn btn-danger">삭제</a>


