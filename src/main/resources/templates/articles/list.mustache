<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">TITLE</th>
      <th scope="col">CONTENT</th>
    </tr>
  </thead>
  <tbody>
  {{ #articleList }}
    <tr>
      <th scope="row">{{ id }}</th>
      <td><a href="/articles/{{ id }}">{{ title }}</a></td>
      <td>{{ content }}</td>
    </tr>
  {{ /articleList }}
  </tbody>
</table>
<a href="/articles/WriteForm" class="btn btn-primary">새 글 쓰기</a>
	
